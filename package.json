{
  "name": "flw-validation",
  "version": "1.0.0",
  "description": "Flutterwave test code",
  "main": "server.js",
  "scripts": {
    "test": "jest --detectOpenHandles --testTimeout 4000",
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mustaphee/flw-validation.git"
  },
  "keywords": [
    "flutterwave",
    "test",
    "validation"
  ],
  "author": "Yusuff Mustapha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mustaphee/flw-validation/issues"
  },
  "homepage": "https://github.com/mustaphee/flw-validation#readme",
  "dependencies": {
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "express": "^4.17.1",
    "joi": "^17.3.0"
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "slowTestThreshold": 5,
    "testRegex": "((\\.|/*.)(spec))\\.js?$",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}